# NFT Tracer Application - Environment Configuration Template
# Copy this file to .env.development, .env.testing, or .env.staging

# Application Environment
NODE_ENV=development
FLASK_ENV=development
FLASK_DEBUG=True

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5000
DATABASE_PATH=./backend/nft_tracer.db

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SOCKET_URL=http://localhost:5000

# eBPF and Tracing Configuration
ENABLE_EBPF=True
ENABLE_REALTIME=True
TRACE_BUFFER_SIZE=1024

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/nft-tracer.log

# Security
CORS_ORIGINS=*
SECRET_KEY=your-secret-key-here

# Performance Tuning
MAX_PACKET_BUFFER=10000
CLEANUP_INTERVAL=300
