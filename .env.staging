# Staging Environment Configuration

# Application Environment
NODE_ENV=production
FLASK_ENV=production
FLASK_DEBUG=False

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5000
DATABASE_PATH=./backend/nft_tracer_staging.db

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://staging-server:5000
REACT_APP_SOCKET_URL=http://staging-server:5000

# eBPF and Tracing Configuration
ENABLE_EBPF=True
ENABLE_REALTIME=True
TRACE_BUFFER_SIZE=2048

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/nft-tracer-staging.log

# Security (Staging - more restrictive)
CORS_ORIGINS=http://staging-server:3000
SECRET_KEY=staging-secret-key-change-before-deploy

# Performance Tuning
MAX_PACKET_BUFFER=20000
CLEANUP_INTERVAL=600

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
